<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <PreserveCompilationReferences>true</PreserveCompilationReferences>
    <PreserveCompilationContext>true</PreserveCompilationContext>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <Nullable>enable</Nullable>
  </PropertyGroup>
  <Import Condition="Exists('..\OTAPI.Patcher\bin\Debug\net6.0\AutoGenerated.target')" Project="..\OTAPI.Patcher\bin\Debug\net6.0\AutoGenerated.target" />
  <Import Condition="Exists('..\OTAPI.Client.Launcher\bin\Debug\net6.0\AutoGenerated.target')" Project="..\OTAPI.Client.Launcher\bin\Debug\net6.0\AutoGenerated.target" />
  <ItemGroup>
    <Reference Include="OTAPI" Condition="Exists('..\OTAPI.Patcher\bin\Debug\net6.0\OTAPI.exe')">
      <HintPath>..\OTAPI.Patcher\bin\Debug\net6.0\OTAPI.exe</HintPath>
    </Reference>
    <Reference Include="OTAPI" Condition="Exists('..\OTAPI.Patcher\bin\Debug\net6.0\OTAPI.dll')">
      <HintPath>..\OTAPI.Patcher\bin\Debug\net6.0\OTAPI.dll</HintPath>
    </Reference>
    <Reference Include="OTAPI" Condition="Exists('..\OTAPI.Patcher\bin\Debug\net6.0\OTAPI.Runtime.dll')">
      <HintPath>..\OTAPI.Patcher\bin\Debug\net6.0\OTAPI.Runtime.dll</HintPath>
    </Reference>
    <Reference Include="Steamworks.NET" Condition="Exists('..\OTAPI.Patcher\bin\Debug\net6.0\EmbeddedResources\Steamworks.NET.dll')">
      <HintPath>..\OTAPI.Patcher\bin\Debug\net6.0\EmbeddedResources\Steamworks.NET.dll</HintPath>
    </Reference>
    <Reference Include="OTAPI" Condition="Exists('..\OTAPI.Client.Launcher\bin\x64\Debug\net6.0\client\OTAPI.exe')">
      <HintPath>..\OTAPI.Client.Launcher\bin\x64\Debug\net6.0\client\OTAPI.exe</HintPath>
    </Reference>
    <Reference Include="OTAPI" Condition="Exists('..\OTAPI.Client.Launcher\bin\x64\Debug\net6.0\client\OTAPI.Runtime.dll')">
      <HintPath>..\OTAPI.Client.Launcher\bin\x64\Debug\net6.0\client\OTAPI.Runtime.dll</HintPath>
    </Reference>
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\FNA\FNA.Core.csproj" />
    <PackageReference Include="ModFramework" Version="1.1.7" />
    <PackageReference Include="MonoMod" Version="22.5.1.1" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.1" />
    <PackageReference Include="Steamworks.NET" Version="20.1.0" />
  </ItemGroup>
  <ItemGroup>
    <Folder Include="Modules\OTAPI.Mods\Resources\" />
  </ItemGroup>
  <Target Name="CleanAll" AfterTargets="Clean">
    <RemoveDir Directories="$(OUTDIR)" />
  </Target>
</Project>
